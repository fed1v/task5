<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:maxLength="25"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/contact_firstName"
        app:layout_constraintStart_toEndOf="@id/contact_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Phone Number" />

    <TextView
        android:id="@+id/contact_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/contact_lastName"
        app:layout_constraintStart_toStartOf="@id/contact_phoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/contact_phoneNumber"
        tools:text="First Name" />

    <TextView
        android:id="@+id/contact_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/contact_phoneNumber"
        app:layout_constraintTop_toBottomOf="@id/contact_firstName"
        tools:text="Last Name" />


</androidx.constraintlayout.widget.ConstraintLayout>